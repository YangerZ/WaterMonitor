@model IEnumerable<AdminLTE.UsersTab>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>用户管理</h2>

<p>
    @Html.ActionLink("添加", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.user_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_unit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_tel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_role)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.user_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_region)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_unit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_tel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_role)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.id }) |
            @Html.ActionLink("站点", "Details", new { unit=item.user_unit}) |
            @Html.ActionLink("删除", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
