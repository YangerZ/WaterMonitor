@model AdminLTE.Models.SysUser
@{
    ViewBag.Title = "Details";
    Layout = Layout = " ~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<dl>
    <dt>
        @Html.DisplayNameFor(model=>model.UserName)
    </dt>
    <dd>
        @Html.DisplayFor(model=>model.UserName)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Email)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Email)
    </dd>
    <dt>
        @Html.DisplayNameFor(model=>model.SysUserRoles)
    </dt>
    <dd>
        <table>
            <tr>
                <th>RoleName</th>
                <th>RoleDesc</th>
            </tr>
            @foreach (var item in Model.SysUserRoles)
            {
                <tr>
                    <td>@Html.DisplayFor(model=>item.SysRole.RoleName)</td>
                    <td>@Html.DisplayFor(model => item.SysRole.RoleDesc)</td>
                </tr>
            }
        </table>
    </dd>

</dl>

