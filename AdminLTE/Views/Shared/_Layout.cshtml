    @RenderSection("ViewSpecificJavascript", required: false)
    <script>
        function generalTime(splitchar, stamp) {

            var formatstr = "";
            var t;
            if (stamp == "" || stamp == undefined) {
                t = new Date();
            }
            else {
                t = new Date(stamp);
            }


            var year = t.getFullYear();
            var month = t.getMonth() + 1;
            var day = t.getDate();
            var hour = t.getHours();
            var minutes = t.getMinutes();
            var seconds = t.getSeconds();
            if (month < 10) {
                month = '0' + month;
            }
            if (day < 10) {
                day = '0' + day;
            }
           // var time = hour + ":" + minutes + ":" + seconds;
            if (splitchar == null) {
                formatstr = year + month + day;
            }
            else {
                formatstr = year + splitchar + month + splitchar + day ;
            }
            //tObj.stamp = t.getTime();
            return formatstr;
        }
        var d = generalTime('-', '');
        $(".t1_e").val(d);
        $(".t2_e").val(d);//获取
    </script>

   
</body>
